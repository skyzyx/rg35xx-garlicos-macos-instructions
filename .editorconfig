# Uses editorconfig to maintain consistent coding styles
# http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.toml]
indent_size = 4

[*.{css,html,js,json,less,sass,scss,yaml,yml}]
indent_size = 2

[*.{tf,tfvars}]
indent_size = 2
indent_style = space

[*.py]
indent_size = 4

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[Makefile*]
indent_style = tab
